---


interface Props {
    pokemon: {
        name: string;
        url:  string;
    },
    isBig?: boolean
} 

const { pokemon, isBig = false} = Astro.props
const id = pokemon.url.split('/').at(-2);
const imageSrc= `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`


---

<a href={`/pokemons/${pokemon.name}`} 
class:list={[
  `rounded  flex flex-col justify-cente items-center pt-4 `,
  {
    border: !isBig,
  }
]}

>
  <img 
  transition:name={`${pokemon.name}-image`}
  class:list={[
    {
      'w-26 h-26':isBig,
      'w-16 h-16': !isBig
    }
  ]}
  
  src={imageSrc} alt={pokemon.name} />
  <h2
  class:list={[
    `capitalize mb-2`,
    {
      'text-4xl text-blue-300': isBig
    }
  ]}
  > # {id} {pokemon.name}</h2>
</a>